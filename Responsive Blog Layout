      <div class="col-md-6 mb-2">
        <input
          type="text"
          id="searchInput"
          class="form-control"
          placeholder="Search blog posts..."
          onkeyup="filterPosts()"
        />
      </div>
      <div class="col-md-6">
        <select class="form-select" id="categorySelect" onchange="filterPosts()">
          <option value="">All Categories</option>
